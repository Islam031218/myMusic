<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <ImageView
        android:id="@+id/goodImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/brand" />

    <TextView
        android:id="@+id/goodName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:text="Guitara"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@id/goodImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/goodQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="Col - vo"
        app:layout_constraintStart_toStartOf="@id/goodName"
        app:layout_constraintTop_toBottomOf="@id/goodName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="шт"
        app:layout_constraintBaseline_toBaselineOf="@+id/goodQuantity"
        app:layout_constraintStart_toEndOf="@+id/goodQuantity"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/goodPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toStartOf="@id/goodQuantity"
        app:layout_constraintTop_toBottomOf="@id/goodQuantity" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="сом"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBaseline_toBaselineOf="@id/goodPrice"
        app:layout_constraintStart_toEndOf="@id/goodPrice" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>